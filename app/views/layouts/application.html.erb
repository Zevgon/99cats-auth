<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



  <h1> <%= current_user.user_name if current_user %> </h1>
  <ul>
    <% if flash[:errors] %>
      <%flash[:errors].each do |error|%>
        <li> <%=error%> </li>
      <% end %>
    <% end %>
  </ul>

  <% if current_user %>
    <%= button_to "Log Out", {:controller => :sessions,
      :action => 'destroy', :id => current_user.id }, :method => :delete %>
  <% else %>
    <%= button_to "Log In", new_session_url, method: :get %>
  <% end %>

  <%= yield %>

</body>
</html>
